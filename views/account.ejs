<style>
    body{
    background:#eee;
}

.card{
    border:none;

    position:relative;
    overflow:hidden;
    border-radius:8px;
    cursor:pointer;
}

.card:before{
    position:absolute;
    left:0;
    top:0;
    width:4px;
    height:100%;
    background-color:#FCFFE7;
    transform:scaleY(1);
    transition:all 0.5s;
    transform-origin: bottom
}

.card:after{
    
    content:"";
    position:absolute;
    left:0;
    top:0;
    width:4px;
    height:100%;
    background-color:#EB455F;
    transform:scaleY(0);
    transition:all 0.5s;
    transform-origin: bottom
}

.card:hover::after{
    transform:scaleY(1);
}


.fonts{
    font-size:11px;
}

.social-list{
    display:flex;
    list-style:none;
    justify-content:center;
    padding:0;
}

.social-list li{
    padding:10px;
    color:#EB455F;
    font-size:19px;
}


.buttons button:nth-child(1){
       border:1px solid #EB455F !important;
       color:#EB455F;
       height:40px;
}

.buttons button:nth-child(1):hover{
       border:1px solid #EB455F !important;
       color:#fff;
       height:40px;
       background-color:#EB455F;
}

.buttons button:nth-child(2){
       border:1px solid #EB455F !important;
       color:#EB455F;
       height:40px;
}

.buttons button:nth-child(2):hover{
       border:1px solid #EB455F !important;
       color:#fff;
       height:40px;
       background-color:#EB455F;
}


.buttons button:nth-child(3){
       border:1px solid red !important;
       color:red;
       height:40px;
}

.buttons button:nth-child(3):hover{
       border:1px solid red !important;
       color:#fff;
       height:40px;
       background-color:red;
}

@media screen and (max-width: 992px) {
    .dbtn{
        margin-top: 1rem;
    }
}

</style>
<body>

